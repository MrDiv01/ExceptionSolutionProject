@{
    ViewData["Title"] = "Uzanabilir Input ve Calendar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <title>Uzanabilir Input ve Calendar</title>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #555;
            display: block;
            margin-bottom: 8px;
            text-align: left;
        }

        textarea {
            width: 100%;
            height: 150px;
            resize: both;
            padding: 12px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

            textarea:focus {
                border-color: #007bff;
                outline: none;
            }

        input[type="datetime-local"] {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #ccc;
            margin-top: 20px;
            transition: border-color 0.3s ease;
        }

            input[type="datetime-local"]:focus {
                border-color: #007bff;
                outline: none;
            }

        button, .btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 10px; /* Üstte boşluk */
            transition: background-color 0.3s ease;
            width: 100%; /* Butonların genişliği tam olsun */
        }

            button:hover, .btn:hover {
                background-color: #0056b3;
            }

        .dual-button {
            display: flex;
            flex-direction: column; /* Butonları alt alta yerleştir */
            gap: 10px; /* Butonlar arasında boşluk */
            margin-top: 20px; /* Formun altında boşluk */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Uzanabilir Input ve Calendar</h1>

        <form asp-action="ScheduleMessage" method="post">
            <label for="uzunMetin">Uzanabilir Metin Girişi:</label>
            <textarea id="uzunMetin" name="message" placeholder="Buraya uzun bir metin yazabilirsiniz..."></textarea>

            <label for="tarihSec">Tarih Seçimi:</label>
            <input type="datetime-local" id="tarihSec" name="scheduledTime" required>

            <div class="dual-button">
                <button type="submit">Planla</button>
                <a asp-action="Index" asp-controller="AIHelp" class="btn">Ask To AI</a>
                <a asp-action="List" class="btn">Go Back</a>
            </div>
        </form>
    </div>
</body>
</html>
